<div class="col-sm-8 col-sm-offset-2">
  <%= form_tag session_path, class: "form-horizontal" do %>
    <div class="form-group">
      <%= label_tag :email, nil, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= email_field_tag :email, nil, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :password, nil, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= password_field_tag :password, nil, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= button_tag "Log In", class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>

<%= render partial: 'shared/park_index' %>
